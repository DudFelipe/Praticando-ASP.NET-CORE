@model GestaoClientes.Domain.Models.TiposDeClientes

@{
    ViewData["Title"] = "Apagar tipo de cliente";
}

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3>Are you sure you want to delete this?</h3>
        </div>
        <div class="card-body">

            <partial name="_delete_details" />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Apagar" class="btn btn-danger" />
                <a asp-controller="TiposDeClientes" asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
            </form>
        </div>
    </div>
